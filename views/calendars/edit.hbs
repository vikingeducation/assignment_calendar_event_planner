<header class="page-header">
  <h1>Edit Calendar: {{ calendar.name }}</h1>
</header>


<form action="/calendars/{{ calendar.id }}" method="post" class="form-horizontal">
  <input type="hidden" name="_method" value="PUT">


  <div class="form-group">
    <label for="calendar_name" class="col-sm-1 control-label">Name</label>
      <div class="col-sm-5">
    <input type="text" class="form-control" name="calendar[name]" id="calendar_name" value="{{ calendar.name }}">
  </div>  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-5">
    <input type="submit" class="btn btn-primary">
  </div>  </div>
</form>
