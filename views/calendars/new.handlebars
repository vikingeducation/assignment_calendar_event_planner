<header class="page-header">
  <h1>New Calendar</h1>
</header>

<form action="/calendars" method="post">
  <div class="form-group">
    <label for="calendar_name">Name</label>
    <input type="text" class="form-control" name="calendar[name]" id="calendar_name">
  </div>
  <div class="form-group">
    <label for="user_identifier">Username or Email</label>
    <input type="text" class="form-control" name="calendar[identifier]" id="user_identifier">
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Create Calendar</button>
  </div>
</form>
