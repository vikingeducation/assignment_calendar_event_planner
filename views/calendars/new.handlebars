<header class="page-header">
  <h1>New Calendar</h1>
</header>


<form action="/calendars" method="post">
  <div class="form-group">
    <label for="calendar_name">Name</label>
    <input type="text" class="form-control" name="calendar[name]" id="calendar_name">
  </div>
  <div class="form-group">
    <label for="user_username">Username</label>
    <input type="text" class="form-control" name="user[username]" id="user_username">
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary" value="Create Calendar">
  </div>
</form>