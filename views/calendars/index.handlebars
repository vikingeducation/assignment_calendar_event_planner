<header class="page-header">
  <h1>Calendars Index</h1>
  <a href="/calendars/new" class="btn btn-primary">+ New Calendar</a>
</header>


{{#if calsInfo.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Calendar Name</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each calsInfo as |calendar| }}
      <tr>
        <td>
          <a href="/calendars/{{ calendar.calendarId }}">{{ calendar.name }}</a>
        </td>
        <td>
          <a href="/users/{{ calendar.userId }}">{{ calendar.username }}</a>
        </td>
        <td>
          <a href="/users/{{ calendar.userId }}">{{ calendar.email }}</a>
        </td>
        <td>
          <a href="/calendars/{{ calendar.calendarId }}/edit">Edit</a>
        </td>
        <td>
          <a href="/calendars/{{ calendar.calendarId }}?_method=delete" class="text-danger">Delete</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No calendars</p>
{{/if }}