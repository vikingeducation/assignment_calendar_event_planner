
<header class="page-header">
  <h1>Calendars</h1>
  <a href="/calendars/new" class="btn btn-primary">+ New Calendar</a>
</header>



{{#if calendars.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Calendar Name</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each calendars as |calendar| }}
      <tr>
        <td>
          <a href="/calendars/{{ calendar.id }}">{{ calendar.name }}</a>
        </td>
        <td>
          <a href="/users/{{ calendar.userId }}">{{ calendar.fname }}</a>
        </td>
        <td>
          <a href="/users/{{ calendar.userId }}">{{ calendar.lname }}</a>
        </td>
        <td>
          <a href="/users/{{ calendar.userId }}">{{ calendar.username }}</a>
        </td>
        <td>
          <a href="/users/{{ calendar.userId }}">{{ calendar.email }}</a>
        </td>
        <td>
          <a href="/calendars/{{ calendar.id }}/edit" class="btn btn-primary">Edit</a>
        </td>
        <td>
          <a href="/calendars/{{ calendar.id }}?_method=delete"  class="btn btn-danger">Delete</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No calendars</p>
{{/if }}

