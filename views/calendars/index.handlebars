<header class="page-header">
  <h1>Calendars</h1>
  <a href="/calendars/new" class="btn btn-primary">+ New Calendar</a>
</header>


{{#if calendars.length }}
<table class="table">
  <thead>
    <tr>
      <th>Calendar Name</th>
      <th>Username</th>
      <th>Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each calendars as |calendar| }}
    <tr>
      <td>
        <a href="/calendars/{{ calendar.id }}">{{ calendar.name }}</a>
      </td>
      <td>
        <a href="/calendars/{{ calendar.id }}">{{ calendar.User.username }}</a>
      </td>
      <td>
        <a href="/calendars/{{ calendar.id }}">{{ calendar.User.email }}</a>
      </td>
      <td>
        <a href="/calendars/{{ calendar.id }}/edit">Edit</a>
      </td>
      <td>
        <a href="/calendars/{{ calendar.id }}?_method=delete" class="text-danger">Delete</a>
      </td>
    </tr>
    {{/each }}
  </tbody>
</table>
{{else }}
<p class="text-danger">No calendars</p>
{{/if }}
