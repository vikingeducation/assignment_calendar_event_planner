<h2>Edit Calendar: {{calendar.name}}</h2>

<form action="/calendars/{{calendar.id}}" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" value="{{calendar.name}}" class="form-control" id="name" name="name">
  </div>

  <button type="submit" class="btn btn-default">Update Calendar</button>
</form>
