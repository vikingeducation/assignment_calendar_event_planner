<header class="page-header">
  <h1>Edit Calendar: {{ calendar.name }}</h1>
</header>

<form action="/calendars/{{ calendar.id }}" method="post">
  <input type="hidden" name="_method" value="PUT">

  <div class="form-group">
    <label for="user_fname">Name</label>
    <input type="text" class="form-control" name="calendar[name]" id="calendar_name" value="{{ calendar.name }}">
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Update Calendar</button>
  </div>
</form>
