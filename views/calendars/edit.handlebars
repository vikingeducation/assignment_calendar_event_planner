
<header class="page-header">
  <h1>Edit calendar: {{ calendar.name }}</h1>
</header>


<form action="/calendars/{{ calendar.id }}" method="post">
  <input type="hidden" name="_method" value="PUT">

  <h2>Calendar Info</h2>
  <div class="form-group">
    <label for="calendar_name">Name</label>
    <input type="text" class="form-control" name="calendar[fname]" id="calendar_fname" value="{{ calendar.name }}">
  </div>
  <div class="form-group">
    <label for="calendar_email">Email</label>
    <input type="text" class="form-control" name="calendar[email]" id="calendar_email" value="{{ calendar.email }}">
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>
