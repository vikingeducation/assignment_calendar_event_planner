<header class="page-header">
  <h1>Calendar: {{ calendar.name }}</h1>
  <a href="/calendars/{{ calendar.id }}/edit" class="btn btn-primary">Edit</a>
  <a href="/calendars/{{ calendar.id }}?_method=delete" class="btn btn-danger">Delete</a>
</header>

<table class="table">
  <tbody>
    <tr>
      <td>Calendar Name</td>
      <td>{{ calendar.name }}</td>
    </tr>
    <tr>
      <td>Username</td>
      <td>{{ user.username }}</td>
    </tr>
    <tr>
      <td>Events</td>
      <td>
        {{#each events as |event| }}
        <a href="/events/{{ event.id }}">{{ event.name }}</a><br>
        {{/each }}
      </td>
    </tr>
  </tbody>
</table>
