<div class="container">
  <div class="row">
    <h3>Calendars Index</h3>
  </div>
  <div class="row">
    <a href="/calendar/new" class="btn btn-primary">+ New Calendar</a>
  </div>
  <div class="row">
    <table class="table-bordered table-hover">
      <tr>
        <th>Calendar Name</th>
        <th>Username </th>
        <th> Email </th>
        <th> Edit </th>
        <th> Delete </th>
      </tr>
    {{#if calendars.length }}
    {{#each calendars as |cal|}}
      <tr>

        <td> <a href="/calendar/{{cal.id}}"> {{cal.name}} </a></td>
        <td> <a href="/user/{{cal.id}}">{{cal.UserTable.username}} </a></td>
        <td> <a href="/user/{{cal.id}}">{{cal.UserTable.email}} </a></td>
        <td> <a href="/calendar/edit/{{cal.id}}" class="text-warning">Edit</a></td>
        <td> <a href="/calendar/delete/{{cal.id}}?_method=delete" class="text-danger">Delete</a> </td>
      </tr>
      {{/each}}
    {{else}}
    <p> No Data</p>
    {{/if}}
  </table>
  </div>
</div>
