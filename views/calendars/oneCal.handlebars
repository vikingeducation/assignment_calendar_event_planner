<div class="container">
  {{#each calendar as |cal|}}
  <div class="row">
    <h3>Calendar: {{cal.name}}</h3>
  </div>
  <div class="row">
    <a href="/calendar/edit/{{cal.id}}" class="btn btn-warning">Edit</a>
    <a href="/calendar/delete/{{cal.id}}?_method=delete" class="btn btn-danger">Delete</a>
  </div>
  <div class="row">
    <table class="table-bordered table-hover">
    <tr>
      <td> Calendar Name: </td>
    <td>  {{cal.name}} </td>
  </tr>
  <tr>
    <td> Username: </td>
    <td> {{cal.UserTable.username}} </td>
  </tr>
  </table>
  </div>
  {{/each}}
</div>
