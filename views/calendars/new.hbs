<header class="page-header">
  <h1>New Calendar</h1>
</header>


<form action="/calendars" method="post">
  <h2>Calendar Info</h2>
  <div class="form-group">
    <label for="calendar_name">Name</label>
    <input type="text" class="form-control" name="calendar[name]" id="calendar_name">
  </div>
  <div class="form-group">
    <select name="calendar[userId]">
      {{#each users as |user|}}
        <option value="{{ user.id }}">{{ user.id }} - {{ user.username }}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>
