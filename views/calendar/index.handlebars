{{#if calendar.length }}
  <table class="table">
    <thead>
      <tr>
        <th>calendar name</th>
        <th> Creator: User Id</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each calendar as |calendarNode| }}
      <tr>
        <td>
          <a href="/calendar/{{ calendarNode.id }}">{{ calendarNode.name }}</a>
        </td>
        <td>
          <a href="/calendar/{{ calendarNode.id }}">{{ calendarNode.userId }}</a>
        </td>
        <td>
          <a href="/calendar/{{ calendarNode.id }}/edit">Edit</a>
        </td>
        <td>
          <a href="/calendar/{{ calendarNode.id }}?_method=delete" class="text-danger">Delete</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No calendars</p>
{{/if }}
