<h1>Users Index</h1>

<a href="/user/new"><button>New User</button></a>

<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Username</th>
			<th>Email</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
	{{#each users as |user|}}
		<tr>
			<td>{{user.fname}}</td>
			<td>{{user.lname}}</td>
			<td><a href="/users/{{user.id}}">{{user.username}}</a></td>
			<td>{{user.email}}</td>
			<td>
				<a href="/user/{{user.id}}/edit"><button>Edit</button></a>
			</td>
			<td>
				<form action="/user/{{user.id}}/delete" method="POST">
					<input type="hidden" name="_method" value="DELETE">
					<button>Delete</button>
				</form>
			</td>
		</tr>
	{{/each}}
	</tbody>
</table>