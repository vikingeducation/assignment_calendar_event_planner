<header><h1>Viewing User: {{user.lastName}}, {{user.firstName}}</h1>
</header>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{user.firstName}}</td>
      <td>{{user.lastName}}</td>
      <td>{{user.username}}</td>
      <td>{{user.email}}</td>
      <td><a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a></td>
      <td><a href="/users/{{user.id}}?_method=DELETE" class="btn btn-danger">Delete</a></td>
    </tr>
  </tbody>
  </table>
