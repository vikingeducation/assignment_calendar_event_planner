<div class="container">
  <div class="row">
    <a href="/user/new" class="btn btn-primary">+ New User</a>
  </div>
  <div class="row">
    <table class="table-bordered table-hover">
      <tr>
        <th>First Name</th>
        <th>Last Name </th>
        <th> Username </th>
        <th> Email </th>
      </tr>
    {{#if users.length }}
    {{#each users as |user|}}
    <tr>
    <td> <a href="/user/{{user.id}}"> {{user.fname}} </a></td>
    <td> <a href="/user/{{user.id}}">{{user.lname}} </a></td>
    <td> <a href="/user/{{user.id}}">{{user.username}} </a></td>
    <td> <a href="/user/{{user.id}}">{{user.email}} </a></td>
    <td> <a href="/user/edit/{{user.id}}" class="text-warning">Edit</a></td>
    <td> <a href="/user/delete/{{user.id}}?_method=delete" class="text-danger">Delete</a> </td>
  </tr>
    {{/each}}
    {{else}}
    <p> No Data</p>
    {{/if}}
  </table>
  </div>
</div>
