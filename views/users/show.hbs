<header class="page-header">
  <h1>User: {{ user.lname }}, {{ user.fname }}</h1>
  <a href="{{editUserPath user.id}}" class="btn btn-primary">Edit</a>
  <a href="{{destroyUserPath user.id}}" class="btn btn-danger">Delete</a>
</header>

<dl class="dl-horizontal">
  <dt>First Name: </dt>
  <dd>{{ user.fname }}</dd>

  <dt>Last Name: </dt>
  <dd>{{ user.lname }}</dd>

  <dt>Username: </dt>
  <dd>{{user.username}}</dd>

  <dt>Email: </dt>
  <dd>{{user.email}}</dd>
</dl>

<h2>Calendars</h2>
{{#if user.calendars}}
    <table class="table table-stripped table-bordered">
      <thead>
        <tr>
          <th>Calendar Name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each user.calendars}}
            <td><a href="{{calendarPath this.id}}">{{this.name}}</a></td>
            <td><a href="{{editCalendarPath this.id}}">edit</a></td>
            <td><a href="{{destroyCalendarPath this.id}}">delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
{{else}}
    <p>{{user.fname}} {{user.lname}} does not have any calendars yet.</p>
{{/if}}


