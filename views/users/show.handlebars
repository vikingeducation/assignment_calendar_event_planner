<section class='wrapper'>
  <h1 class='page-header'>User: {{user.firstName}} {{user.lastName}}</h1>

  <button><a href='/users/{{user.id}}/edit'>Edit</a></button>
  <button><a href='/users/{{user.id}}?_method=DELETE'>Delete</a></button>

  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
    <tr>
      <td>{{user.firstName}}</td>
      <td>{{user.lastName}}</td>
      <td>{{user.username}}</td>
      <td>{{user.email}}</td>
    </tr>
  </table>
</section>
