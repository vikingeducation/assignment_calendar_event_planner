<header class="page-header">
  <h1>User: {{ user.fname }} {{ user.lname }}</h1>
  <a href="/users/{{ user.id }}/edit" class="btn btn-primary">Edit</a>
  <a href="/users/{{ user.id }}?_method=delete" class="btn btn-danger">Delete</a>
</header>

<table class="table">
  <tbody>
    <tr>
      <td>First Name</td>
      <td>{{ user.fname }}</td>
    </tr>
    <tr>
      <td>Last Name</td>
      <td>{{ user.lname }}</td>
    </tr>
    <tr>
      <td>Username</td>
      <td>{{ user.username }}</td>
    </tr>
    <tr>
      <td>Email</td>
      <td>{{ user.email }}</td>
    </tr>
    <tr>
      <td>Calendars</td>
      <td>
        {{#each calendars as |calendar| }}
        <a href="/calendars/{{ calendar.id }}">{{ calendar.name }}</a><br>
        {{/each }}
      </td>
    </tr>
  </tbody>
</table>
