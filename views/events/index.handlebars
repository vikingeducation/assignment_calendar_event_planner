

<header class="page-header">
  <h1>Events</h1>
  <a href="/events/new" class="btn btn-primary">+ New Event</a>
</header>


{{#if events.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Event Name</th>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Calendar Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each events as |event| }}
      <tr>
        <td>
          <a href="/events/{{ event.id }}">{{ event.name }}</a>
        </td>
        <td>
          <a href="/events/{{ event.id }}">{{ event.date }}</a>
        </td>
        <td>
          <a href="/events/{{ event.id }}">{{ event.start_time }}</a>
        </td>
        <td>
          <a href="/events/{{ event.id }}">{{ event.end_time }}</a>
        </td>
        <td>
          <a href="/calendars/{{ event.id }}">{{ event.calendarName }}</a>
        </td>
        <td>
          <a href="/users/{{ event.id }}">{{ event.username }}</a>
        </td>
        <td>
          <a href="/users/{{ event.id }}">{{ event.email }}</a>
        </td>
        <td>
          <a href="/events/{{ event.id }}/edit">Edit</a>
        </td>
        <td>
          <a href="/events/{{ event.id }}?_method=delete" class="text-danger">Delete</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No events</p>
{{/if }}
