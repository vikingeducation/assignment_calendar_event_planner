

<header class="page-header">
  <h1>Events Index</h1>
  <a href="/events/new" class="btn btn-primary">+ New Event</a>
</header>


{{#if events.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Event Name</th>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Calendar Name</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each events as |event| }}
      <tr>
        <td>
          <a href="/events/{{ event.id }}">{{ event.name }}</a>
        </td>
        <td>
          {{ event.date }}
        </td>
        <td>
          {{ event.startTime }}
        </td>
        <td>
          {{ event.endTime }}
        </td>
        <td>
          <a href="/calendars/{{ event.Calendar.id }}">{{ event.Calendar.name }}</a>
        </td>
        <td>
          <a href="/users/{{ event.Calendar.User.id }}">{{ event.Calendar.User.username }}</a>
        </td>
        <td>
          <a href="/users/{{ event.Calendar.User.id }}">{{ event.Calendar.User.email }}</a>
        </td>
        <td>
          <a href="/events/{{ event.id }}/edit">Edit</a>
        </td>
        <td>
          <a href="/events/{{ event.id }}?_method=delete" class="text-danger">Delete</a>
        </td>
      </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No events</p>
{{/if }}