<header class="page-header">
  <h1>Edit Event: {{ event.name }}</h1>
</header>


<form action="/events/{{ event.id }}" method="post" class="form-horizontal">
  <input type="hidden" name="_method" value="PUT">


  <div class="form-group">
    <label for="event_name" class="col-sm-2 control-label">Event Name</label>
        <div class="col-sm-5">
    <input type="text" class="form-control" name="event[name]" id="event_name" value="{{ event.name }}">
  </div>
  </div>
  <div class="form-group">
    <label for="event_date" class="col-sm-2 control-label">Event date</label>
    <div class="col-sm-2">
    <input type="date" class="form-control" name="event[date]" id="event_date" value="{{ event.date }}">
  </div></div>
  <div class="form-group">
    <label for="event_start_time" class="col-sm-2 control-label">Event Start Time</label>
    <div class="col-sm-2">
    <input type="time" class="form-control" name="event[start_time]" id="event_start_time" value="{{ event.start_time }}">
  </div></div>
  <div class="form-group">
    <label for="event_end_time" class="col-sm-2 control-label">Event End Time</label>
    <div class="col-sm-2">
    <input type="time" class="form-control" name="event[end_time]" id="event_end_time" value="{{ event.end_time }}">
  </div></div>

  <div class="form-group">
    <label for="event_description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
    <textarea class="form-control" name="event[description]" id="event_description" rows="5">{{ event.description }}</textarea>
  </div></div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <input type="submit" class="btn btn-primary">
  </div>  </div>
</form>
