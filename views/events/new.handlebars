<header class="page-header">
  <h1>New Event</h1>
</header>


<form action="/events" method="post">
  <h2>Event Info</h2>
  <div class="form-group">
    <label for="event_name">Event Name</label>
    <input type="text" class="form-control" name="event[name]" id="event_name" required>
  </div>
  <div class="form-group">
    <label for="event_start_date_time">Start</label>
    <input type="datetime-local" class="form-control" name="event[startDateTime]" id="event_start_date_time" required>
  </div>
  <div class="form-group">
    <label for="event_name">End</label>
    <input type="datetime-local" class="form-control" name="event[endDateTime]" id="event_end_date_time" required>
  </div>
  <div class="form-group">
    <label for="event_calendarId">Calendar</label>
    <select class="form-control" name="event[calendarId]" id="event_calendarId" required>
      {{#each calendars as |calendar| }}
        <option value="{{calendar.id}}">
          {{calendar.name}}
        </option>
      {{/each }}
    </select>
  </div>
  <div class="form-group">
    <label for="event_description">Description</label>
    <textarea class="form-control" name="event[description]" id="event_description" required></textarea>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>
