

<header class="page-header">
  <h1>Edit Event: {{ event.name }}</h1>
</header>


<form action="/events/{{ event.id }}" method="post">
  <input type="hidden" name="_method" value="PUT">

  <h2>Event Info</h2>
  <div class="form-group">
    <label for="name">Event Name</label>
    <input type="text" class="form-control" name="event[name]" id="name" value="{{ event.name }}">
  </div>
  <div class="form-group">
    <label for="description">Event description</label>
    <input type="text" class="form-control" name="event[description]" id="description" value="{{ event.description }}">
  </div>
  <div class="form-group">
    <label for="date">Event date</label>
    <input type="text" class="form-control" name="event[date]" id="date" value="{{ event.date }}">
    <!--how to set event date value-->
  </div>
  <div class="form-group">
    <label for="startTime">Event start time</label>
    <input type="time" class="form-control" name="event[startTime]" id="startTime" value="{{ event.startTime }}">
  </div>
  <div class="form-group">
    <label for="endTime">Event end time</label>
    <input type="time" class="form-control" name="event[endTime]" id="endTime" value="{{ event.endTime }}">
  </div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>











