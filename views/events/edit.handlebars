<header class="page-header">
  <h1>Edit Event: {{ event.name }}</h1>
</header>


<form action="/events/{{ event.id }}" method="post">
  <input type="hidden" name="_method" value="PUT">

  <div class="form-group">
    <label for="event_name">Name: </label>
    <input type="text" class="form-control" name="event[name]" id="event_name" value="{{ event.name }}">
  </div>
  <div class="form-group">
    <label for="event_date">Date: </label>
    <input type="text" class="form-control" name="event[date]" id="event_date" value="{{ event.date }}">
  </div>
  <div class="form-group">
    <label for="event_start_time">Start Time: </label>
    <input type="text" class="form-control" name="event[start_time]" id="event_start_time" value="{{ event.start_time }}">
  </div>
  <div class="form-group">
    <label for="event_end_time">End Time: </label>
    <input type="text" class="form-control" name="event[end_time]" id="event_end_time" value="{{ event.end_time }}">
  </div>
  <div class="form-group">
    <label for="event_description">Description: </label>
    <input type="text" class="form-control" name="event[description]" id="event_description" value="{{ event.description }}">
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>
