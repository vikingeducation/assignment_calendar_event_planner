<header class="page-header">
  <h1>New Event</h1>
</header>


<form action="/events" method="post" class="form-horizontal">

  <div class="form-group">
    <label for="event_name" class="col-sm-2 control-label">Event Name</label>
        <div class="col-sm-10">
    <input type="text" class="form-control" name="event[name]" id="event_name">
  </div>
  </div>
  <div class="form-group">
    <label for="event_date" class="col-sm-2 control-label">Event date</label>
    <div class="col-sm-10">
    <input type="date" class="form-control" name="event[date]" id="event_date">
  </div></div>
  <div class="form-group">
    <label for="event_start_time" class="col-sm-2 control-label">Event Start Time</label>
    <div class="col-sm-10">
    <input type="time" class="form-control" name="event[start_time]" id="event_start_time">
  </div></div>
  <div class="form-group">
    <label for="event_end_time" class="col-sm-2 control-label">Event End Time</label>
    <div class="col-sm-10">
    <input type="time" class="form-control" name="event[end_time]" id="event_end_time">
  </div></div>
  <div class="form-group">
    <label for="event_calendar" class="col-sm-2 control-label">Calendar</label>
    <div class="col-sm-10">
    <select class="form-control" name="event[calendar]" id="event_calendar">
    {{#each calendars as |calendar| }}
      <option value="{{ calendar.id }}">{{calendar.name}}</option>
    {{/each}}
  </select>
  </div></div>
  <div class="form-group">
    <label for="event_description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
    <textarea class="form-control" name="event[description]" id="event_description" rows="5"></textarea>
  </div></div>




  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <input type="submit" class="btn btn-primary">
  </div>  </div>
</form>
