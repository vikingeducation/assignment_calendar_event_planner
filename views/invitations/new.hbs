<header class="page-header">
  <h1>New Invitation</h1>
</header>


<form action="/invitations" method="post" class="form-horizontal">

  <div class="form-group">
    <label for="invitation_user" class="col-sm-2 control-label">User</label>
    <div class="col-sm-3">
    <select class="form-control" name="user_id" id="invitation_user">
    {{#each users as |user| }}
      <option value="{{ user.id }}">{{user.username}}</option>
    {{/each}}
  </select>
  </div></div>

  <div class="form-group">
    <label for="invitation_event" class="col-sm-2 control-label">Event</label>
    <div class="col-sm-3">
    <select class="form-control" name="event_id" id="invitation_event">
    {{#each events as |event| }}
      <option value="{{ event.id }}">{{event.name}}</option>
    {{/each}}
  </select>
  </div></div>





  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <input type="submit" class="btn btn-primary">
  </div>  </div>
</form>
