<header class="page-header">
  <h1>New Invitation for {{event.name}}</h1>
</header>

<form action="/invitations" method="post">
  <input type="hidden" name="invitation[eventId]" value="{{event.id}}">

  <div class="form-group">
    <label for="invitation_invitee">Invitee Username or Email</label>
    <input type="text" class="form-control" name="invitation[invitee]" id="invitation_invitee" required>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>
