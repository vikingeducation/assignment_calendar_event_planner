

<header class="page-header">
  <h1>New Invitation</h1>
</header>


<form action="/invitations" method="post">
 
  <div class="form-group">
    <label for="event_id">Event</label>
    <select class="form-control" name="invitation[id]" id="event_id">
      {{#each events as |event| }}
      <option value="{{ event.id }}">{{ event.name }}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="user_id">Invitee Username</label>
    <select class="form-control" name="invitation[user]" id="user_id">
      {{#each users as |user| }}
      <option value="{{ user.id }}">{{ user.username }}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>











