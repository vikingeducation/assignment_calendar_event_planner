<header class="page-header">
  <h1>New Invitation</h1>
</header>

<form action="/invitations" method="post">
  <div class="form-group">
    <label for="event_name">Event</label>
    <input type="text" class="form-control" name="invitation[event]" id="event_name">
  </div>
  <div class="form-group">
    <label for="user_identifier">Invitee Username or Email</label>
    <input type="text" class="form-control" name="invitation[identifier]" id="user_identifier">
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Create Invitation</button>
  </div>
</form>
