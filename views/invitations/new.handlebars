<header class="page-header">
  <h1>New Invitation</h1>
</header>


<form action="/invitations" method="post">
  <h2>Invitation Info</h2>
  <div class="form-group">
    <label for="invitation_event">Event/label>
    <br>
    <select name="invitation[event]" id="invitation_event">
      {{#each events as |event| }}
      <option value="{{ event.id }}">{{ event.name }}</option>
      {{/each }}
    </select>
  </div>
  <div class="form-group">
    <label for="invitation_user">User to Invite</label>
    <br>
    <select name="invitation[user]" id="invitation_user">
      {{#each users as |user| }}
      <option value="{{ user.id }}">{{ user.username }}</option>
      {{/each }}
    </select>
  </div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>











